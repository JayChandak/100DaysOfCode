class Solution {
    public int[] arrayRankTransform(int[] arr) {
    
        int temp[] = Arrays.copyOf(arr, arr.length);
        HashMap<Integer, Integer> map = new HashMap<>();        
        
        Arrays.sort(temp);
        for (int i : temp) 
            map.putIfAbsent(i, map.size() + 1);            
        

        for (int i = 0; i < arr.length; i++) 
            temp[i] = map.get(arr[i]);
        
        return temp;
    }
}
